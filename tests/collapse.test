    parent::setUp();
    $this->testPage('<fieldset id="1" class="collapsible"><legend><span class="fieldset-legend">Test fieldset</span></legend><div class="fieldset-wrapper">Content</div></fieldset>' .
                                '<fieldset id="2"><legend><span class="fieldset-legend">Test fieldset</span></legend><div class="fieldset-wrapper">Content</div></fieldset>' .
                                '<fieldset id="3" class="collapsible collapsed"><legend><span class="fieldset-legend">Test fieldset</span></legend><div class="fieldset-wrapper">Content</div></fieldset>');
    $this->testLibrary(array(array('system', 'drupal.collapse')));
  }
}
